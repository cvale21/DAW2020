extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3.w3-left Student: #{student.nome}
        .w3-container
            ul.w3-ul
                li <b> Number: #{student.numero}
                li <b> Name: #{student.nome}
                li <b> Git: 
                    a(href="#{student.git}") #{student.git}

                if student.tpc.length > 0  
                    table.w3-table-all
                        tr 
                            th TPC
                            th Completed
                            each t, i in student.tpc
                                tr
                                    if(t==1)
                                        td TPC #{i} 
                                        td Done
                                    else
                                        td TPC #{i}
        
